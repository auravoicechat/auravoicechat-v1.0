<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Base dark background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#12141A"
                android:centerColor="#1A1C24"
                android:endColor="#22242E" />
        </shape>
    </item>
    
    <!-- Centered Aura Voice Chat logo -->
    <item
        android:gravity="center"
        android:width="120dp"
        android:height="120dp"
        android:drawable="@drawable/ic_aura_logo" />
    
</layer-list>
