rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }
    
    function isUnder5MB() {
      return request.resource.size < 5 * 1024 * 1024;
    }
    
    function isUnder10MB() {
      return request.resource.size < 10 * 1024 * 1024;
    }
    
    // User avatars
    match /avatars/{userId}/{fileName} {
      allow read: if true;
      allow write: if isAuthenticated() && isOwner(userId) && isImage() && isUnder5MB();
      allow delete: if isOwner(userId);
    }
    
    // Room covers
    match /rooms/{roomId}/cover/{fileName} {
      allow read: if true;
      allow write: if isAuthenticated() && isImage() && isUnder5MB();
    }
    
    // KYC documents - Only ID Card (front/back) + Selfie (NO utility bills)
    match /kyc/{userId}/id-front/{fileName} {
      allow read: if isOwner(userId);
      allow write: if isAuthenticated() && isOwner(userId) && isImage() && isUnder10MB();
      allow delete: if false;
    }
    
    match /kyc/{userId}/id-back/{fileName} {
      allow read: if isOwner(userId);
      allow write: if isAuthenticated() && isOwner(userId) && isImage() && isUnder10MB();
      allow delete: if false;
    }
    
    match /kyc/{userId}/selfie/{fileName} {
      allow read: if isOwner(userId);
      allow write: if isAuthenticated() && isOwner(userId) && isImage() && isUnder10MB();
      allow delete: if false;
    }
    
    // Gift media (read-only for users)
    match /gifts/{giftId}/{fileName} {
      allow read: if true;
      allow write: if false; // Admin only
    }
    
    // Store item media (read-only for users)
    match /store/{itemId}/{fileName} {
      allow read: if true;
      allow write: if false; // Admin only
    }
    
    // Lottie animations (read-only for users)
    match /animations/{animationId}/{fileName} {
      allow read: if true;
      allow write: if false; // Admin only
    }
    
    // Chat media
    match /chat/{roomId}/{messageId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isImage() && isUnder5MB();
      allow delete: if false;
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
